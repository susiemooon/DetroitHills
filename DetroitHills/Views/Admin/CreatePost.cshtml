@model DetroitHills.Models.Post
@{
    ViewBag.Title = "CreatePost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(/Assets/img/bg-img/news_back.jpg);">
    <div class="bradcumbContent">
        <h2>Create New Post</h2>
    </div>
</section>

<div style="text-align:center">
    @using (Html.BeginForm("CreatePost", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
        <div>
            <p style="font:800;  font-size:large">Post Name:</p>
            @Html.EditorFor(m => Model.title)
        </div>
        <div>
            <p style="font:800; font-size:large">Post Name Rus:</p>
            @Html.EditorFor(m => Model.title_lng)
        </div>
            <div>
                <p style="font:800;  font-size:large">Start writing post:</p>
                @Html.EditorFor(m => Model.text)
            </div>
            <div>
                <p style="font:800;  font-size:large">Start writing post Rus:</p>
                @Html.EditorFor(m => Model.text_lng)
            </div>
            <p style="font:800; font-size:large">Upload image</p>
            <input type="file" name="upload"/>

            <input type="submit" class="oneMusic-btn" value="Save" />
    }
    </div>

