@model DetroitHills.Models.Item
@{
    ViewBag.Title = "EditItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(/Assets/img/bg-img/shop_back.jpg);">
    <div class="bradcumbContent">
        <h2>Add Item</h2>
    </div>
</section>

<section class="login-area section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="login-content">

                    <div class="login-form">
                        @using (Html.BeginForm("EditItem", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.ValidationSummary(true);
                            @Html.HiddenFor(m => m.ItemId)
                            <div class="form-group">
                                <label>Name:</label>
                                <p>@Html.EditorFor(m => Model.name, new { htmlAttributes = new { @class = "form-small" } })</p>
                            </div>
                            <div class="form-group">
                                <label>Price in $:</label>
                                <p>@Html.EditorFor(m => Model.price, new { htmlAttributes = new { @class = "form-small" } })</p>
                            </div>
                            <div class="form-group">
                                <label>Price in rub:</label>
                                <p>@Html.EditorFor(m => Model.price_lng, new { htmlAttributes = new { @class = "form-small" } })</p>
                            </div>

                            <div class="form-group">
                                <label>Image:</label>
                                <input type="file" name="upload" />
                            </div>
                            <button type="submit" class="btn oneMusic-btn mt-30">Save</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

