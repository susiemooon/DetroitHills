
@{
    ViewBag.Title = "Newsletter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(/Assets/img/bg-img/blog3.jpg);">
    <div class="bradcumbContent">
        <h2>Newsletter</h2>
    </div>
</section>

<section class="login-area section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="login-content">

                    
                    <div class="login-form">
                        @using (Html.BeginForm())
                        {

                            <div class="form-group">
                                <label>Subject</label>
                                <input type="text" class="form-small" name="subject" autocomplete = "off" placeholder="Enter Subject">

                            </div>
                            <div class="form-group">
                                <label>Text</label>
                                <textarea type="text" class="form-big" name="text"> </textarea>
                                <button type="submit" class="btn oneMusic-btn mt-30">Send</button>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>