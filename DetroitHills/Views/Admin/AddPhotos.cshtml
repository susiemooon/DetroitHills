
@{
    ViewBag.Title = "AddPhotos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(/Assets/img/bg-img/photo_back.jpg);">
    <div class="bradcumbContent">
        <h2>Add Photos</h2>
    </div>
</section>

<section class="login-area section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="login-content">

                    <div class="login-form">
                        @using (Html.BeginForm("AddPhotos", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                <label>Album Name:</label>
                                <input type="text" name="albumname" class="form-small" placeholder="Album Name" />
                            </div>
                            <div class="form-group">
                                <label>Upload images:</label>
                                <p><input type="file" name="uploads" /></p>
                                <p><input type="file" name="uploads" /></p>
                                <p><input type="file" name="uploads" /></p>
                                <p><input type="file" name="uploads" /></p>
                                <p><input type="file" name="uploads" /></p>
                            </div>                            
                            <button type="submit" class="btn oneMusic-btn mt-30">Add</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



