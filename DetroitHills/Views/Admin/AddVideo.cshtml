@model DetroitHills.Models.Video
@{
    ViewBag.Title = "AddVideo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(/Assets/img/bg-img/video_back.jpg);">
    <div class="bradcumbContent">
        <h2>Add Video</h2>
    </div>
</section>

<section class="login-area section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="login-content">

                    <div class="login-form">
                        @using (Html.BeginForm("AddVideo", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                <label>Video Name:</label>
                                <p>@Html.EditorFor(m => Model.name, new { htmlAttributes = new { @class = "form-small" } })</p>
                            </div>
                            <div class="form-group">
                                <label>Link:</label>
                                <p>@Html.EditorFor(m => Model.link, new { htmlAttributes = new { @class = "form-small" } })</p>
                            </div>
                            
                            <button type="submit" class="btn oneMusic-btn mt-30">Add</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
